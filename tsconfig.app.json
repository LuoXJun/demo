{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
    "exclude": ["src/**/__tests__/*"],
    "compilerOptions": {
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",

        // 将每个文件作为单独的模块
        "isolatedModules": true,
        "skipLibCheck": true,
        "importHelpers": false,
        "target": "esnext",
        "useDefineForClassFields": true,
        "strict": true,
        "jsx": "preserve",
        "allowJs": true,
        "checkJs": false,
        "declaration": false,
        // 检查参数隐式any
        "noImplicitAny": false,
        // 严格检查null
        "strictNullChecks": true,
        // 检查函数隐式any
        "noImplicitThis": true,
        "alwaysStrict": true,
        // 检查未使用参数
        "noUnusedLocals": true,
        // 未使用的参数报错
        "noUnusedParameters": true,
        // 不是所有函数都有返回值时报错
        "noImplicitReturns": false,
        "sourceMap": true,
        "removeComments": true,
        "resolveJsonModule": true,
        "skipDefaultLibCheck": false,
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "baseUrl": "./",
        "paths": {
            "@": ["src"],
            "@/*": ["src/*"]
        }
    }
}
